@model IEnumerable<Repartidor2.Models.TblEmpleado>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreEmpleado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApellidoEmpleado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TelefonoEmpleado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DireccionEmpleado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActivoEmpleado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdRestauranteNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdTipoEmpleadoNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreEmpleado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApellidoEmpleado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelefonoEmpleado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DireccionEmpleado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActivoEmpleado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdRestauranteNavigation.DireccionRestaurante)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdTipoEmpleadoNavigation.NombreTipoEmpleado)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdEmpleado">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdEmpleado">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdEmpleado">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
